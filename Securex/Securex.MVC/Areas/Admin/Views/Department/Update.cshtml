@{
    ViewBag.Title = "Update Department";
}
@model DepartmentUpdateVM
<div class="container text-center">
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="font-weight-bold text-primary">Update Department</h6>
                    <a asp-action="Index" asp-controller="Department" class="btn btn-primary">Return List</a>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control">
                            <span asp-validation-for="Name" class="form-text text-danger text-small"></span>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>