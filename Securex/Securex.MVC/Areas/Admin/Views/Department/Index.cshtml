@{
    ViewBag.Title = "Department List";
    int count = 1; 
}
@model List<Department>
<div class="container>
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="font-weight-bold text-primary">Department List</h6>
                    <div>
                        <a asp-action="Create" asp-controller="Department" class="btn btn-primary">Create Department</a>
                        <a asp-action="Deleted" asp-controller="Department" class="btn btn-danger">Deleted Departments</a>
                    </div>
                </div>
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Name</th>
                                <th scope="col">Created Time</th>
                                <th scope="col">Updated Time</th>
                                <th scope="col">Update</th>
                                <th scope="col">Delete</th>
                                <th scope="col">Show/Hide</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td scope="col">@(count++)</td>
                                    <td scope="col">@item.Name</td>
                                    <td scope="col">@item.CreatedTime</td>
                                    <td scope="col">@(item.UpdatedTime == null ? "-" : item.UpdatedTime)</td>
                                    <td scope="col">
                                        <a class="btn btn-outline-primary" asp-action="Update" asp-controller="Department" asp-route-id="@item.Id">
                                            <i class="fa-solid fa-pen"></i>
                                        </a>
                                    </td>
                                    <td scope="col">
                                        <a class="btn btn-outline-danger" asp-action="Delete" asp-controller="Department" asp-route-id="@item.Id">
                                            <i class="fa-solid fa-trash"></i>
                                        </a>
                                    </td>
                                    <td scope="col">
                                        <a class="btn @(item.IsVisible ? "btn-outline-secondary" : "btn-outline-warning")"
                                           asp-action="@(item.IsVisible ? "Show" : "Hide")"
                                           asp-controller="Department"
                                           asp-route-id="@item.Id">
                                            <i class="fa-solid @(item.IsVisible ? "fa-eye-slash" : "fa-eye")"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>