@{
    ViewBag.Title = "Create Employee";
}
@model EmployeeCreateVM
<div class="container text-center">
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="font-weight-bold text-primary">Create Employee</h6>
                    <a asp-action="Index" asp-controller="Employee" class="btn btn-primary">Return List</a>
                </div>
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label asp-for="Fullname" class="form-label"></label>
                            <input asp-for="Fullname" class="form-control">
                            <span asp-validation-for="Fullname" class="form-text text-danger text-small"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Image" class="form-label"></label>
                            <input asp-for="Image" accept="image" class="form-control">
                            <span asp-validation-for="Image" class="form-text text-danger text-small"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="DepartmentId" class="form-label"></label>
                            <select class="form-select" asp-for="DepartmentId">
                                <option selected disabled>Select Department</option>
                                @foreach (var item in ViewBag.Departments)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }
                            </select>
                            <span asp-validation-for="DepartmentId" class="form-text text-danger text-small"></span>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>