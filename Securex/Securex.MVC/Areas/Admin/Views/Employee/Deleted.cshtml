@{
    ViewBag.Title = "Deleted Employee";
    int count = 1;
}
@model List<Employee>
<div class="container text-center">
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="font-weight-bold text-primary">Deleted Employees List</h6>
                    <div>
                        <a asp-action="Index" asp-controller="Employee" class="btn btn-primary">Return</a>
                        <a asp-action="RemoveAll" asp-controller="Employee" class="btn btn-danger"
                           asp-route-ids="@(string.Join(",", Model.Select(x=> x.Id)))">Remove All</a>
                    </div>
                </div>
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Image</th>
                                <th scope="col">Fullname</th>
                                <th scope="col">Department</th>
                                <th scope="col">Created Time</th>
                                <th scope="col">Updated Time</th>
                                <th scope="col">Repair</th>
                                <th scope="col">Remove</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td scope="col">@(count++)</td>
                                    <td scope="col"><img src="~/imgs/employees/@item.ImageUrl" width="50px" /></td>
                                    <td scope="col">@item.Fullname</td>
                                    <td scope="col">@(item.Department?.Name == null ? "-" : item.Department.Name )</td>
                                    <td scope="col">@item.CreatedTime</td>
                                    <td scope="col">@(item.UpdatedTime == null ? "-" : item.UpdatedTime)</td>
                                    <td scope="col">
                                        <a class="btn btn-outline-primary" asp-action="Repair" asp-controller="Employee" asp-route-id="@item.Id">
                                            <i class="fa-solid fa-hammer"></i>
                                        </a>
                                    </td>
                                    <td scope="col">
                                        <a class="btn btn-outline-danger" asp-action="Remove" asp-controller="Employee" asp-route-id="@item.Id">
                                            <i class="fa-solid fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

